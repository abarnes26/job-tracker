<!DOCTYPE html>
<html>
<head>
  <title>JobTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav_bar">
    <%= link_to "Companies", companies_path, {:class => "nav_bar_links"} %>
    <%= link_to "All Jobs", jobs_path, {:class => "nav_bar_links"} %>
    <%= link_to "Categories", categories_path, {:class => "nav_bar_links"} %>
    <%= link_to "Dashboard", dashboard_index_path, {:class => "nav_bar_links"} %>
  </div><br>
  <div id="not_nav_bar">

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end %>
<%= yield %>
</div>
</body>
</html>
